<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainActivity"
        android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteX="0dp" android:layout_marginBottom="388dp"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/rvPosts"/>

    <android.support.design.widget.FloatingActionButton
            android:layout_width="20dp"
            android:layout_height="20dp" android:src="@android:drawable/ic_input_add"/>

</LinearLayout>